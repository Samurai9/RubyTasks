<p id="notice"><%= notice %></p>
<p id="alert" style="color: red"><%= alert %></p>
<p>
  <strong>Title:</strong>
  <%= @card.title %>
</p>

<%= render "todos/form", card: @card, todo: @card.todo.build%>

<p>
  <strong>Todos:</strong>
  <ul>
  <%- @card.todo.each do |todo| %>
  	<li> 
  		
  		<%- if (!todo.id.nil?) %>
		<b><%=	todo.title%></b>:
  			<%=	todo.description%>
  			<%= link_to 'Destroy', todo_path(id:todo.id), method: 
  				:delete, 
  				data: {confirm: "Are you sure?"}%>
			
  		<%- end %>
  		
  	</li>
  <%- end %>
  </ul>
</p>
<%= link_to 'Edit', edit_card_path(@card) %> |
<%= link_to 'Back', cards_path %>


